<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_delete_patient"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Are you sure you want to delete ?"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="#f3131313"
        android:background="#d3d3d3"/>

    <TextView
        android:id="@+id/textView_delete_delete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Delete"
        android:textSize="17dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="#f3131313"/>


    <View
        android:id="@+id/imageView_delete_delete"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#d3d3d3"
        android:layout_marginTop="5dp"
        app:srcCompat="?attr/dividerHorizontal" />

    <TextView
        android:id="@+id/textView_delete_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Cancel"
        android:textSize="17dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="#f3131313"/>



</LinearLayout>