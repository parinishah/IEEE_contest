<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/printable_ui">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView_print_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:clickable="true"/>

            <TextView
                android:id="@+id/textView_print_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_weight="0.8"
                android:textSize="20dp"
                android:padding="2dp"
                android:gravity="center"/>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:id="@+id/linearLayout_printable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#ffffff"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView_print_patient_name"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Pt's Name : "
                android:layout_weight="0.3"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textView_print_patient_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Krish Shah"
                android:textColor="#000000"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView_print_patient_age"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Age : "
                android:layout_weight="0.3"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textView_print_patient_name_age_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="21"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textView_print_patient_name_age_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text=" years"
                android:textColor="#000000"
                android:layout_weight="0.56"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView_print_patient_gender"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Gender : "
                android:layout_weight="0.28"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textView_print_patient_name_gender_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Male"
                android:textColor="#000000"
                android:layout_weight="0.668"/>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/textView_printable_create_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="CREATE PDF"
        android:textAlignment="center"
        android:clickable="true"
        android:textColor="#ffffff"
        android:textSize="20dp" />


</LinearLayout>